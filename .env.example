# Google Calendar IDs
# Find these in your Google Calendar settings
WORK_CALENDAR_ID=your_work_calendar_id_here
PERSONAL_CALENDAR_ID=your_personal_calendar_id_here

# Prefix to add to events
EVENT_PREFIX="[WORK]"

# Sync Configuration
# Number of past days to sync (default: 7)
DAYS_TO_SYNC_PAST=7

# Number of future days to sync (default: 30)
DAYS_TO_SYNC_FUTURE=30

# How often to sync in minutes (default: 30)
SYNC_INTERVAL_MINUTES=30

# Optional: Custom file paths (defaults shown)
WORK_TOKEN_PATH=tokens/work_token.json
PERSONAL_TOKEN_PATH=tokens/personal_token.json
SYNCED_EVENTS_FILE=data/synced_events.json
